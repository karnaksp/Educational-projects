#test test_smart_calc_number20
  double xx = M_PI;
  char x[256] = "";
  strcpy(x, "");
  sprintf(x, "%lf", xx);
  char expression[1024] = "cos(x)";
  double answer = cos(xx);
  double result = NAN;
  int error_code;
  result = s21_calculation(expression, x, &error_code);
  ck_assert_double_eq_tol(answer, result, 1e-7);

